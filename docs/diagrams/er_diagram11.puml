@startuml er_diagram11

entity "КНИГИ" {
  * book_id : INTEGER
  --
  title : TEXT
  author : TEXT
  isbn : TEXT
  year : INTEGER
  publisher : TEXT
  category : TEXT
}

entity "ЭКЗЕМПЛЯРЫ" {
  * copy_id : INTEGER
  * book_id : INTEGER
  --
  barcode : TEXT
  status : TEXT
  condition : TEXT
}

entity "ЧИТАТЕЛИ" {
  * reader_id : INTEGER
  --
  name : TEXT
  card_number : TEXT
  contact : TEXT
  status : TEXT
}

entity "ВЫДАЧИ" {
  * loan_id : INTEGER
  * copy_id : INTEGER
  * reader_id : INTEGER
  --
  issue_date : TEXT
  due_date : TEXT
  return_date : TEXT
  status : TEXT
}

entity "БРОНИРОВАНИЯ" {
  * reservation_id : INTEGER
  * book_id : INTEGER
  * reader_id : INTEGER
  --
  reservation_date : TEXT
  status : TEXT
}

entity "ШТРАФЫ" {
  * fine_id : INTEGER
  * reader_id : INTEGER
  --
  amount : REAL
  reason : TEXT
  status : TEXT
}

' Связи с обозначениями 1 и N
КНИГИ ||..|| ЭКЗЕМПЛЯРЫ : "1 → N"
ЭКЗЕМПЛЯРЫ ||..|| ВЫДАЧИ : "1 → N"
ЧИТАТЕЛИ ||..|| ВЫДАЧИ : "1 → N"
ЧИТАТЕЛИ ||..|| БРОНИРОВАНИЯ : "1 → N"
КНИГИ ||..|| БРОНИРОВАНИЯ : "1 → N"
ЧИТАТЕЛИ ||..|| ШТРАФЫ : "1 → N"

@enduml